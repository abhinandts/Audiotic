        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <!-- <th scope="col">Name</th> -->
                            <th scope="col">Email</th>
                            <th>Order ID</th>
                            <th scope="col">Order Status</th>
                            <th scope="col">Total</th>
                        </tr>
                    </thead>

<tbody>
    <% orders.forEach(element => { %>
        <tr>
            <td><%= element.formattedDate %></td>
            <td><%= element.user.email %></td>
            <td><a href="/admin/showOrder/<%= element.orderId %>"><%= element.orderId %></a></td>
            <td>
                <span class="badge rounded-pill 
                    <%= element.orderStatus === "Delivered" ? 'alert-success' : 
                        element.orderStatus === "Pending" ? 'alert-warning' : 
                        element.orderStatus === "Shipped" ? 'alert-secondary' : 
                        element.orderStatus === "Processing" ? 'alert-info' : 
                        (element.orderStatus === "Cancelled" || element.orderStatus === "Returned") ? 'alert-danger' : 
                        'alert-warning' %>">
                    <%= element.orderStatus %>
                </span>
            </td>
            <td><%= element.orderTotal %> .00</td>
        </tr>
    <% }); %>
</tbody>

                    
                </table>
            </div> <!-- table-responsive //end -->
