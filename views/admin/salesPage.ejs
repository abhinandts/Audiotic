<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">
                <%= title %>
            </h2>
            <p>View and Download sales report</p>
        </div>
        <div>
            <!-- Optional input for search -->
        </div>
    </div>

    <div class="card mb-4">
        <header class="card-header">
            <div class="row gx-3">
                <div class="col-lg-2 col-md-6 me-auto">
                    <!-- Optional search input -->
                     <label for="">Filter Orders</label>
                    <select class="form-select" id="order-filter">
                        <option value="all">All orders</option>
                        <option value="7days">Last 7 days</option>
                        <option value="30days">Last 30 days</option>
                    </select>



                </div>

                <div class="col-lg-2 col-6 col-md-3">
                    <button class="btn btn-primary btn-sm rounded" id="download-excel">Download Excel Report</button>

                </div>

                <div class="col-lg-2 col-6 col-md-3">
                    <button class="btn btn-primary btn-sm rounded" id="download-pdf" >Download PDF Report</button>

                </div>
            </div>
        </header>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Email</th>
                            <th>Order ID</th>
                            <th scope="col">Payment Method</th>
                            <th scope="col">Total</th>
                        </tr>
                    </thead>
                    <tbody id="table-body"></tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>
<script src="/admin/scripts/salesPage.js"></script>
