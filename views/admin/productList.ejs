<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Products List</h2>
            <p>Lorem ipsum dolor sit amet.</p>
        </div>
        <div>
            <!-- <a href="#" class="btn btn-light rounded font-md">Export</a>
            <a href="#" class="btn btn-light rounded  font-md">Import</a> -->
            <a href="/admin/newProduct" class="btn btn-primary btn-sm rounded">Create new Product</a>
        </div>
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <div class="row align-items-center">
                <div class="col col-check flex-grow-0">
                    <div class="form-check ms-2">
                        <!-- <input class="form-check-input" type="checkbox" value=""> -->
                    </div>
                </div>
                <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                    <select class="form-select">
                        <option selected>All category</option>
                        <option>In Ear</option>
                        <option>On Ear</option>
                        <option>True wireless</option>
                    </select>
                </div>
                <div class="col-md-2 col-6">
                    <!-- <input type="date" value="02.05.2022" class="form-control"> -->
                </div>
                <div class="col-md-2 col-6">
                    <select class="form-select">
                        <option selected>Status</option>
                        <option value="all">Show all</option>
                        <option value="true">Active</option>
                        <option value="false">Disabled</option>
                    </select>
                </div>
            </div>
        </header> <!-- card-header end// -->



        <div class="card-body">

            <% productData.forEach((x)=>{ %>

                <article class="itemlist">
                    <div class="row align-items-center">
                        <div class="col col-check flex-grow-0">
                            <div class="form-check">âž¤</div>
                        </div>
                        <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                            <a class="itemside" href="#">
                                <div class="left">
                                </div>

                                <div class="info">
                                    <h6 class="mb-0">
                                        <%= x.productName %>
                                    </h6>
                                </div>
                            </a>
                        </div>
                        <div class="col-lg-2 col-sm-2 col-4 col-price"> <span>
                                <%=x.price%>
                            </span> </div>

                        <% if(x.is_active){ %>
                            <div class="col-lg-2 col-sm-2 col-4 col-status">
                                <span class="badge rounded-pill alert-success">Active</span>
                            </div>
                            <%} else{ %>
                                <div class="col-lg-2 col-sm-2 col-4 col-status">
                                    <span class="badge rounded-pill alert-danger">Blocked</span>
                                </div>
                                <% } %>

                                    <div class="col-lg-1 col-sm-2 col-4 col-date">
                                        <span>
                                            <%= x.category.name %>
                                        </span>
                                    </div>
                                    <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                        <a href="/admin/editProduct/<%- x._id %>"
                                            class="btn btn-sm font-sm rounded btn-brand">
                                            <i class="material-icons md-edit"></i> Edit
                                        </a>

                                        <% if(x.is_active){ %>
                                            <a href="/admin/blockProduct/<%- x._id %>"
                                                class="btn btn-sm font-sm btn-light rounded">
                                                <i class="material-icons md-delete_forever"></i> Block
                                            </a>
                                            <% }else{ %>
                                                <a href="/admin/blockProduct/<%- x._id %>"
                                                    class="btn btn-sm font-sm btn-light rounded">
                                                    Unblock
                                                </a>
                                                <% } %>
                                    </div>
                    </div> <!-- row .// -->
                </article> <!-- itemlist  .// -->

                <% }) %>


        </div> <!-- card-body end// -->
    </div> <!-- card end// -->
    <div class="pagination-area mt-30 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
                <li class="page-item active"><a class="page-link" href="#">01</a></li>
                <li class="page-item"><a class="page-link" href="#">02</a></li>
                <li class="page-item"><a class="page-link" href="#">03</a></li>
                <li class="page-item"><a class="page-link dot" href="#">...</a></li>
                <li class="page-item"><a class="page-link" href="#">16</a></li>
                <li class="page-item"><a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</section>