        <div class="card-body">
            <% productData.forEach((x)=>{ %>
        
            <article class="itemlist">
                <div class="row align-items-center">
                    <div class="col col-check flex-grow-0">
                        <div class="form-check">‚û§</div>
                    </div>
                    <div class="col-lg-3 col-sm-3 col-7 flex-grow-1 col-name">
                        <a class="itemside" href="/admin/editProduct/<%=x._id  %>">
                            <div class="left">
                                <img src="/admin/productImages/<%=x.image[0]  %>" class="img-sm img-thumbnail" alt="Item">
                            </div>
        
                            <div class="info">
                                <h6 class="mb-0">
                                    <%= x.name %>
                                </h6>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-4 col-price">
                        <span>
                            ‚Çπ<%=x.price.toLocaleString("en-IN")%>
                        </span>
                    </div>
        
                    <% if(x.is_active){ %>
                    <div class="col-lg-2 col-sm-2 col-4 col-status">
                        <span class="badge rounded-pill alert-success">Active</span>
                    </div>
                    <%} else{ %>
                    <div class="col-lg-2 col-sm-2 col-4 col-status">
                        <span class="badge rounded-pill alert-danger">Deleted</span>
                    </div>
                    <% } %>
        
                    <div class="col-lg-1 col-sm-1 col-2 col-date">
                        <span>
                            <%= x.category.name %>
                        </span>
                    </div>



                    <% if(x.stock !==0){ %>
                        <div class="col-lg-1 col-sm-1 col-2 col-status">
                            <span class="badge rounded-pill alert-success">In Stock</span>
                        </div>
                        <%} else{ %>
                        <div class="col-lg-1 col-sm-1 col-2 col-status">
                            <span class="badge rounded-pill alert-danger">Sold Out</span>
                        </div>
                        <% } %>



                    <div class="col-lg-2 col-sm-2 col-4 col-action text-end">

                        <% if(x.is_active){ %>
                        <a href="/admin/blockProduct/<%- x._id %>" class="btn btn-sm font-sm btn-light rounded">
                            üöÆ &nbsp;&nbsp;Delete
                        </a>
                        <% }else{ %>
                        <a href="/admin/blockProduct/<%- x._id %>" class="btn btn-sm font-sm btn-light rounded">
                            üîÉRestore
                        </a>
                        <% } %>
                    </div>
                </div>
            </article>
        
            <% }) %>
        </div>


    </div> <!-- card end// -->


    <div class="pagination-area mt-30 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
                <% for(let i=1;i<=totalPages;i++){ %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="/admin/products?page=<%= i %>">
                            <%= i %>
                        </a>
                    </li>
                    <% } %>
            </ul>
        </nav>
