<section class="content-main">

    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Edit Category </h2>
            <p>Edit Name or Description</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">

                <div class="col-md-4">

                    <form id="editCategoryForm" method="post" action="/admin/editCategory">
                        <input id="categoryId" type="hidden" name="categoryId" value="<%= category.id %>">

                        <div class="mb-4">

                            <label for="product_name" class="form-label">Category Name</label>
                            <input id="categoryName" type="text" placeholder="Type here" class="form-control"
                                name="name" value="<%= category.name %>" />
                            <small id="nameError" class="text-danger" style="display: none;"> Please enter valid
                                name</small>

                        </div>

                        <div class="mb-4">

                            <label class="form-label">Category Description</label>
                            <textarea id="categoryDescription" placeholder="Type here" class="form-control"
                                name="description"><%= category.description %></textarea>
                            <small id="descriptionError" class="text-danger" style="display: none;"></small>

                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary">Save</button>
                        </div>

                    </form>

                </div>

            </div> <!-- .row // -->
        </div> <!-- card body .// -->
    </div> <!-- card .// -->
</section>