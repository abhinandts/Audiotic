<section class="content-main pt-150 mr-200">
    <div class="card mx-auto card-login">
        <div class="card-body">
            <h4 class="card-title mb-4">Admin Sign in</h4>

            <form method="post">
                <% if(typeof message !=="undefined" ){ %>
                    <h4 style="color:crimson">
                        <%= message %>
                    </h4>
                    <% } %>
                        <div class="mb-3">
                            <input class="form-control" name="email" placeholder="Username or email" type="text">
                        </div> 
                        <div class="mb-3">
                            <input class="form-control" name="password" placeholder="Password" type="password">
                        </div> 
                        <div class="mb-3">
                            <label class="form-check">
                                <input type="checkbox" class="form-check-input">
                                <span class="form-check-label">Show Password</span>
                            </label>
                        </div> 
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100"> Login </button>
                        </div>
            </form>
        </div>
    </div>
</section>