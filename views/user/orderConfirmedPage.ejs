<section class="mt-50 mb-50 ">

    <div class="container">

        <div class="row justify-content-center">

            <div class="col-md-6">
                <div class="order_review">
                    <div class="mb-20">
                        <h4>Your Order
                        </h4>
                        <h6 style="padding-top: 10px; color: grey;"> Order Id: <%= order.orderId %>
                        </h6>
                    </div>
                    <div class="table-responsive order_table text-center">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th colspan="2">Products</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% order.products.forEach(element=> { %>

                                    <tr>
                                        <td class="image product-thumbnail"><img src="assets/imgs/shop/product-1-1.jpg"
                                                alt="#">
                                        </td>
                                        <td>
                                            <h5><a href="shop-product-full.html">Product One</a></h5>
                                            <span class="product-qty">x <%= element.quantity %></span>
                                        </td>
                                        <td>₹<%= element.price %>
                                        </td>
                                    </tr>

                                    <% }); %>

                                        <tr>
                                            <th>SubTotal</th>
                                            <td class="product-subtotal" colspan="2">₹<%= order.orderTotal %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Shipping</th>
                                            <td colspan="2"><em>Free Shipping</em></td>
                                        </tr>
                                        <tr>
                                            <th>Total</th>
                                            <td colspan="2" class="product-subtotal"><span
                                                    class="font-xl text-brand fw-900">₹<%= order.orderTotal %>
                                                        .00/-</span></td>
                                        </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="bt-1 border-color-1 mt-30 mb-30"></div>

                </div>
            </div>
        </div>

    </div>

</section>