                            <div class="tab-pane fade active show" id="account-detail" role="tabpanel"
                                aria-labelledby="account-detail-tab">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Edit Account Details</h5>
                                    </div>
                                    <div class="card-body">

                                        <form method="post" name="enq">
                                            <div class="row">
                                                <div class="form-group col-md-10">
                                                    <label>üë§ User Name <span class="required"></span></label>
                                                    <input required="" class="form-control square" id="name"
                                                        name="dname" type="text" value="<%= user.name  %>">
                                                    <small id="nameError" class="text-danger"
                                                        style="display: none;">User Name already taken</small>
                                                </div>
                                                <div class="form-group col-md-10">
                                                    <label>‚úâÔ∏è Email Address <span class="required"></span></label>
                                                    <input required="" class="form-control square" name="email"
                                                        type="email" value="<%= user.email  %> " readonly>
                                                </div>
                                                <div class="form-group col-md-10">
                                                    <label>‚òéÔ∏è Contact number <span class="required"></span></label>
                                                    <input required="" class="form-control square" id="mobile"
                                                        name="dname" type="text" value="<%= user.mobile  %>">
                                                    <small id="mobileError" class="text-danger"
                                                        style="display: none;">User Name already taken</small>
                                                </div>
                                                <div class="col-md-12">
                                                    <!-- <button type="button" class="btn btn-fill-out submit" name="submit"
