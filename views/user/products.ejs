<section class="mt-50 mb-50">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop-product-fillter">
                    <div class="totall-product">
                        <p>
                            We found
                            <strong class="text-brand">
                                <%=products.length %>
                            </strong>
                            items for you!
                        </p>
                    </div>
                    <div class="sort-by-product-area">
                        
                        <div class="sort-by-cover mr-10">
                            <div class="sort-by-product-wrap">
                                <div class="sort-by">
                                    <span><i class="fi-rs-apps"></i>Category:</span>
                                </div>
                                <div class="sort-by-dropdown-wrap">
                                    <select id="category-dropdown">
                                        <option value="">All Products</option>
                                        <% categories.forEach((category) => { %>
                                            <option value="<%= category._id %>"><%= category.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="sort-by-cover ">
                            <div class="sort-by-product-wrap">
                                <div class="sort-by">
                                    <span><i class="fi-rs-apps-sort"></i>Sort by:</span>
                                </div>
                                <div class="sort-by-dropdown-wrap">
                                    <select id="sort-dropdown">
                                        <option value="featured">Featured</option>
                                        <option value="priceLowToHigh">Price: Low to High</option>
                                        <option value="priceHighToLow">Price: High to Low</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row product-grid-3" id="product-list">
                    <% products.forEach((element)=>{ %>

                    <div class="col-lg-3 col-md-4">
                        <div class="product-cart-wrap mb-30">
                            <div class="product-img-action-wrap">
                                <div class="product-img product-img-zoom">
                                    <a href="/productPage?productId=<%-element._id %>">
                                        <img class="default-img" src="/admin/productImages/<%=element.image[0]  %>" alt="no image" />
                                        <img class="hover-img" src="/admin/productImages/<%=element.image[0]  %>" alt="no image" />
                                    </a>
                                </div>
                                
                                <div class="product-badges product-badges-position product-badges-mrg">
                                    <span class="hot">-30%</span>
                                </div>
                            </div>
                            <div class="product-content-wrap">
                                <div class="product-category">
                                    <a href="shop-grid-right.html">
                                        <%= element.category.name %>
                                    </a>
                                </div>
                                <h2>
                                    <a href="/productPage?productId=<%-element._id %>">
                                        <%= element.productName %>
                                    </a>
                                </h2>
                                <div class="rating-result" title="90%">
                                    <span>
                                        <span>70%</span>
                                    </span>
                                </div>
                                <div class="product-price">
                                    <span>₹<%= element.price %> </span>
                                    <span class="old-price">₹<%= element.mrp %></span>
                                </div>
                                <div class="product-action-1 show">
                                    <a aria-label="Add To Cart" class="action-btn hover-up" onclick="addToCart('<%= element._id  %>')"><i class="fi-rs-shopping-bag-add"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% }) %>
                </div>

                <div class="pagination-area mt-15 mb-sm-5 mb-lg-0">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">

                        </ul>
                    </nav>
                </div>


            </div>
        </div>
    </div>
</section>

<script src="/scripts/products.js"></script>
<script src="/scripts/addToCart.js"></script>
<script src="/scripts/header.js"></script>